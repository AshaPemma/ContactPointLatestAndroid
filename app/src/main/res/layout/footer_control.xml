<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingRight="@dimen/dimen_15">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/footer_control_group_indicator"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:layout_margin="@dimen/dimen_12"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingRight="@dimen/dimen_16">

            <ImageView
                android:id="@+id/footer_control_indicator_1"
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_12"
                android:src="@drawable/indicator_selected" />

            <ImageView
                android:id="@+id/footer_control_indicator_2"
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_12"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/indicator_unselected" />

            <ImageView
                android:id="@+id/footer_control_indicator_3"
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_12"
                android:src="@drawable/indicator_unselected" />
        </LinearLayout>
        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:textSize="@dimen/text_size_20"
            android:text="@string/try_email_marketing"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12"
            android:orientation="horizontal">
        <Button
            android:id="@+id/footer_control_button_skip"
            android:background="@drawable/ic_rectangle"
            android:layout_width="@dimen/dimen_130"
            android:layout_height="@dimen/dimen_50"
            android:text="SKIP"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/white" />
            <Button
                android:id="@+id/footer_control_button_next"
                android:background="@drawable/ic_rectangle"
                android:layout_width="@dimen/dimen_130"
                android:layout_height="@dimen/dimen_50"
                android:text="Next"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/footer_control_button_finish"
                android:background="@drawable/ic_rectangle"
                android:layout_width="@dimen/dimen_130"
                android:layout_height="@dimen/dimen_50"
                android:text="FInish"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white" />
        </RelativeLayout>
        <View
            android:id="@+id/view_pwd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLightGrey"
            android:layout_marginTop="@dimen/dimen_30"
            android:padding="@dimen/dimen_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_need_cpm"
        android:text="@string/already_have_an_account"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorGrey"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_50" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13"
        android:id="@+id/tv_login"
        android:text="@string/txt_login"
        android:layout_toRightOf="@+id/tv_need_cpm"
        android:layout_alignParentBottom="true"
        android:textColor="@color/app_theme_color"
        android:layout_marginRight="@dimen/dimen_40"
        android:paddingBottom="@dimen/dimen_20"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>