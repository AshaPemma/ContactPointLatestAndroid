<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="@dimen/dimen_15"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

<ImageView
    android:layout_width="@dimen/dimen_24"
    android:layout_height="@dimen/dimen_24"
    android:src="@drawable/ic_down_arrow_blue"
    android:id="@+id/iv_arrow_down"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Thanks Giving Day"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_15"
        android:textSize="@dimen/text_size_22"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_day"
            android:text="Wednesday,"
            android:paddingRight="@dimen/dimen_5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date"
        android:text="23.01.2018"
        android:paddingLeft="@dimen/dimen_5"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_15">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_50"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/ic_grey_rectangle"
                android:layout_margin="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sent"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/ic_grey_rectangle"
            android:layout_margin="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_50"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/ic_grey_rectangle"
                android:layout_margin="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opened"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_5"
        android:text="@string/view_email"
        android:background="@drawable/ic_rectangle_light_blue"
        android:layout_marginTop="@dimen/dimen_15"
        android:textColor="@color/colorblue"
        android:textSize="@dimen/text_size_16"/>

</LinearLayout>