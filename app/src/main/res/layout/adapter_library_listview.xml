<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle_adapter"
        android:padding="@dimen/dimen_10"
        android:layout_margin="@dimen/dimen_5">

        <ImageView
            android:id="@+id/imgVehicle"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_email"
            android:layout_width="90dp"
            android:layout_height="65dp" />
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvVin"
                android:maxLines="1"
                android:textSize="15sp"
                android:textColor="#5C5C5C"
                android:text="3KPFL4A74JE177017"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvOther"
                android:maxLines="1"
                android:layout_marginTop="7dp"
                android:textSize="15sp"
                android:textColor="#C45C5C5C"
                android:text="Kia Optima 2017 dvdvddvlkmdkvmkdmvkdmvkm"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgClick"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="13dp"
            android:src="@drawable/ic_menu_dots"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24" />
    </LinearLayout>



</LinearLayout>